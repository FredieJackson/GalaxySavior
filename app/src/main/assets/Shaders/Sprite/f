precision mediump float;

varying vec2 vTexCoord;

uniform vec4 uColor;
uniform int useColorFilter;
uniform sampler2D uTexture;

void main()
{
    if(useColorFilter == 1)
    {
        gl_FragColor = uColor * texture2D( uTexture, vTexCoord);
    }
    if(useColorFilter == 0)
    {
        gl_FragColor = texture2D(uTexture, vTexCoord);
    }
}