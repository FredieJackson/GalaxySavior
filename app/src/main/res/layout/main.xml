<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:gravity="center"
    android:background="@drawable/monitorbg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/helloWorld"
        android:id="@+id/appTitle"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.1"
        android:textSize="75sp"
        android:textStyle="bold"
        android:textColor="#ff00b204"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="199dp"
        android:layout_height="70dp"
        android:text="@string/startGame"
        android:textSize="40sp"
        android:textStyle="bold"
        android:id="@+id/startGameBtn"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.1"
        android:onClick="ClickBtn1"
        android:layout_below="@+id/appTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="#ff00b204" />
    <Button
        android:layout_width="199dp"
        android:layout_height="70dp"
        android:text="@string/settings"
        android:textStyle="bold"
        android:id="@+id/settingsBtn"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.1"
        android:onClick="ClickBtn2"
        android:layout_below="@+id/startGameBtn"
        android:layout_alignLeft="@+id/startGameBtn"
        android:layout_alignStart="@+id/startGameBtn"
        android:layout_marginTop="10dp"
        android:textColor="#ff00b204"
        android:textSize="45sp" />
    <Button
        android:layout_width="199dp"
        android:layout_height="70dp"
        android:text="@string/info"
        android:textSize="45sp"
        android:textStyle="bold"
        android:id="@+id/infoBtn"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.1"
        android:onClick="ClickBtn3"
        android:layout_below="@+id/settingsBtn"
        android:layout_alignLeft="@+id/settingsBtn"
        android:layout_alignStart="@+id/settingsBtn"
        android:layout_marginTop="10dp"
        android:textColor="#ff00b204" />

</RelativeLayout>